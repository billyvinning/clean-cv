\newif\ifrightcontact 
\newif\iffirstcontactline


\newcommand{\mylistitem}[1]{%
    \ifrightcontact
        \rightcontactfalse
        \hfill #1%
    \else
        \rightcontacttrue
        \iffirstcontactline
            \noindent #1%
            \firstcontactlinefalse
        \else
            \newline \noindent #1%
        \fi
    \fi
}

\newcommand\cvcontacts{%
